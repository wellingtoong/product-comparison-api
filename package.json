{
  "name": "product-comparison-api",
  "version": "1.0.0",
  "description": "API RESTful para comparação de produtos",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules\" jest --silent",
    "test:watch": "NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:cov": "NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage --silent",
    "test:ci": "NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage --runInBand --silent",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wellingtoong/product-comparison-api.git"
  },
  "author": "Wellington Gonzalez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wellingtoong/product-comparison-api/issues"
  },
  "homepage": "https://github.com/wellingtoong/product-comparison-api#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "forceExit": true,
    "detectOpenHandles": true,
    "testTimeout": 10000,
    "collectCoverage": true,
    "coverageProvider": "v8",
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/__tests__/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/build/",
      "/coverage/",
      "src/server\\.js$"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 100,
        "lines": 55,
        "statements": 55
      }
    }
  }
}
